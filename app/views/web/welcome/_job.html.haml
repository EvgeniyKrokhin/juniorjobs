.row.blog-item
  .col-sm-4.col-md-4.blog-caption
    %h3.post-title#job-title= link_to job.title, job_path(job), style: 'color: #428bca;'
    .sub-post-title.m0
      %span#company-name
        - if job.company_page.present?
          = link_to job.company_name, job.company_page, style: 'color: #428bca;'
        - else
          = job.company_name
      %span#job-location
        - if job.city.present?
          = "- #{job.city}#{job.remote ? t('web.welcome.job.remote1') : ''}"
        - elsif job.remote.present?
          = t('web.welcome.job.remote2')
    .sub-post-title.m0
      %span#job-created-at= job.created_at.strftime('%d.%m.%Y')
  .col-sm-8.col-md-8.blog-caption
    %p#job-description= job.description
