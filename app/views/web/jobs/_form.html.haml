= simple_form_for job, html: { class: 'form-horizontal' } do |f|
  %fieldset
    %label
      = t('.label')

    .form-group.form-row.align-items-center
      .col-md-6
        = f.input :title, label: t('.title'), input_html: { class: 'form-control' }
      .col-md-3
        = f.input :employment_type, label: t('.employment_type'), input_html: { class: 'form-control' }
      .col-md-3
        = f.input :remote, as: :boolean, label: t('.remote'),
        label_html: { class: 'form-check-label'}, input_html: { class: 'form-check-input' }

    .form-group.form-row.align-items-center
      = f.input :description, label: t('.description'), input_html: { class: 'form-control', rows: 10 }
      = f.input :tasks, label: t('.tasks'), input_html: { class: 'form-control' }
      = f.input :requirements, label: t('.requirements'), input_html: { class: 'form-control' }
      = f.input :condition, label: t('.condition'), input_html: { class: 'form-control' }

    .form-group.form-row.align-items-center
      .col-md-6
        = f.input :country, label: t('.country'), input_html: { class: 'form-control' }
      .col-md-6
        = f.input :city, label: t('.city'), input_html: { class: 'form-control' }

    .form-group.form-row.align-items-center
      %legend
        = t('.salary')
      .col-md-2
        = f.input :currency, label: t('.currency'), input_html: { class: 'form-control' }
      .col-md-3
        = f.input :salary_from, label: t('.salary_from'), input_html: { class: 'form-control' }
      .col-md-3
        = f.input :salary_to, label: t('.salary_to'), input_html: { class: 'form-control' }
      .col-md-4
        = f.input :salary_by_agreement, as: :boolean, label: t('.salary_by_agreement'),
        input_html: { class: 'form-check-input' }, label_html: { class: 'form-check-label'}

    = f.button :submit, t('.button')
