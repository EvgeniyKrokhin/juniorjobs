.row
  %h1
    = @job.title
  .col-md-4
    %dl
      %dt
        = t('.location')
      %dd
        = location(@job)
  .col-md-4
    %dl
      %dt
        = t('.salary')
      %dd
        = salary(@job)
  .col-md-4
    %dl
      %dt
        = t('.employment_type')
      %dd
        = @job.employment_type

  %blockquote.blockquote-2
    = @job.description
  %blockquote.blockquote
    %p
      = @job.tasks
    %p
      = @job.requirements
    %p
      = @job.condition
