%br
.col-sm-4
  = link_to t('.all_jobs'), admin_jobs_path
.col-sm-4
  = link_to t('.approved_jobs'), admin_jobs_path(show_status: 'approved')
.col-sm-4
  = link_to t('.not_approved_jobs'), admin_jobs_path(show_status: 'not_approved')
%table.table.table-hover.table-condensed
  %thead
    %tr
      %th
        = t('.job')
      %th
        = t('.company_name')
      %th
        = t('.expired')
      %th{ colspan: '3' }
  %tbody
    = render @jobs
